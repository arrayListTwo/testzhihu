<?xml version="1.0" encoding="utf-8"?>

<!-- 上方头条新闻ViewPage对象的子项布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_contain_topstories"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_show_topstory_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/example" 
        android:contentDescription="@string/abc_action_mode_done"
       	android:visibility="visible"/>
    
     <TextView
         android:id="@+id/tv_show_topstory_title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@id/img_show_topstory_img"
         android:layout_marginBottom="30dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:textColor="#FFFFFF"
         android:textSize="20sp"
         android:visibility="visible"/>
     
     <ProgressBar
         android:id="@+id/topstory_loading"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         android:visibility="gone" />

</RelativeLayout>
